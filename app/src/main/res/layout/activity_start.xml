<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="1">

    <android.widget.Toolbar
        android:id="@+id/start_toolbar"
        style="@style/StartToolbarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/facebook"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="16dp"
                android:src="@drawable/facebook_logo"
                android:onClick=""/>

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="16dp"
                android:src="@drawable/twitter_logo"
                android:onClick=""/>
        </LinearLayout>
    </android.widget.Toolbar>

    <ImageView
        android:layout_width="248dp"
        android:layout_height="248dp"
        android:layout_marginTop="48dp"
        android:scaleType="fitXY"
        android:src="@drawable/pizzabutler_logo_weisseschrift_transparent" />

    <Button
        style="@style/WelcomeButon"
        android:layout_width="248dp"
        android:layout_height="32dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:onClick=""
        android:text="WO WOHNST DU?" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="...stets zu Ihren &#xA;      Diensten"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="italic" />

</LinearLayout>