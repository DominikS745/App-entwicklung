<?xml version="1.0" encoding="utf-8"?>


<!--Dummy Layout fÃ¼r Copy and Paste Navigation Drawer.--><!--Dieses Layout ist nirgends implementiert, die Layouts der Activities die einen Drawer benutzten sind so aufgebaut. -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- The main content view -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- Add content here -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/rolle_login"
                android:layout_width="248dp"
                android:layout_height="32dp"
                android:text="Login"
                android:textSize="10pt"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="16dp"
                android:onClick="OnClickLogin"/>
            <Button
                android:id="@+id/rolle_gast"
                android:layout_width="248dp"
                android:layout_height="32dp"
                android:text="Gast"
                android:textSize="10pt"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="16dp"
                android:onClick="OnClickGast"/>
            <Button
                android:id="@+id/rolle_abholen"
                android:layout_width="248dp"
                android:layout_height="32dp"
                android:text="Abholen"
                android:textSize="10pt"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="16dp"
                android:onClick="OnClickAbholen"/>

        </LinearLayout>
    </FrameLayout>

    <!-- The navigation drawer -->
    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#1a1c25"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />
</android.support.v4.widget.DrawerLayout>