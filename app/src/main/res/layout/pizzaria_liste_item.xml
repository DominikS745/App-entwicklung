<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pizzaria_liste_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <android.widget.Space
        android:layout_width="match_parent"
        android:layout_height="8pt" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pizzaria_bild"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8pt"
            android:text="BILD \nEINFÃœGEN!"
            android:textSize="12pt"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16pt"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pizzaria_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pizzaria Name"
                android:textSize="10pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pizzaria_adresse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adresse"
                android:textSize="10pt" />

            <TextView
                android:id="@+id/pizzaria_plz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PLZ und Stadt"
                android:textSize="10pt" />

            <android.widget.Space
                android:layout_width="match_parent"
                android:layout_height="8pt" />

            <TextView
                android:id="@+id/pizzaria_lieferkosten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lieferkosten: Betrag"
                android:textSize="8pt" />

            <TextView
                android:id="@+id/pizzaria_minbestellwert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mindestbestelltwert: Betrag"
                android:textSize="8pt" />

            <android.widget.Space
                android:layout_width="match_parent"
                android:layout_height="8pt" />

            <TextView
                android:id="@+id/pizzaria_offen_geschlossen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="geschlossen / offen"
                android:textSize="8pt"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>