<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pizzaria_liste_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <android.widget.Space
        android:layout_width="match_parent"
        android:layout_height="8pt" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pizzaria_bild"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8pt"
            android:scaleType="fitXY"
            android:src="@drawable/pizzabutler_erroricon_old" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16pt"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pizzaria_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pizzaria Name"
                android:textSize="10pt"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pizzaria_adresse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adresse"
                    android:textSize="10pt" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textSize="10pt" />

                <TextView
                    android:id="@+id/pizzaria_hausnummer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nr"
                    android:textSize="10pt" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pizzaria_plz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PLZ"
                    android:textSize="10pt" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textSize="10pt" />

                <TextView
                    android:id="@+id/pizzaria_ort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ort"
                    android:textSize="10pt" />

            </LinearLayout>

            <android.widget.Space
                android:layout_width="match_parent"
                android:layout_height="8pt" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pizzaria_lieferkosten_static_string"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lieferkosten: "
                    android:textSize="8pt" />

                <TextView
                    android:id="@+id/pizzaria_lieferkosten_betrag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="8pt" />

                <TextView
                    android:id="@+id/static_euro_lieferkosten"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" €"
                    android:textSize="8pt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pizzaria_minbestellwert_static_string"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minimum: "
                    android:textSize="8pt" />

                <TextView
                    android:id="@+id/pizzaria_minbestellwert_betrag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="8pt" />

                <TextView
                    android:id="@+id/static_euro_mindestbestellwert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" €"
                    android:textSize="8pt" />
            </LinearLayout>

            <android.widget.Space
                android:layout_width="match_parent"
                android:layout_height="8pt" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:clickable="false"
                android:isIndicator="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <android.widget.Space
                android:layout_width="match_parent"
                android:layout_height="8pt" />

            <TextView
                android:id="@+id/pizzaria_offen_geschlossen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="8pt"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>