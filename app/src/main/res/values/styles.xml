<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--App Theme -->
    <style name="PizzaButlerTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">

        <!-- Colors -->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@color/obere_leiste</item>
        <item name="colorAccent">@color/gelb</item>
        <item name="android:textColorPrimary">@color/text_grey</item>
        <item name="android:textColorSecondary">@color/text_red</item>
        <!-- Background -->
        <item name="android:windowBackground">@color/background</item>
        <!-- Font -->
        <item name="android:fontFamily">sans-serif-light</item>
        <!--Refering other Styles (complex) -->
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
    </style>

    <!-- Button Style -->
    <style name="ButtonStyle">
        <item name="android:background">@drawable/custom_button_shape</item>
        <item name="android:textColor">@android:color/white</item>
        <!--<item name="android:textSize">24sp</item> -->
        <!--<item name="android:textStyle">bold</item> -->
        <item name="android:radius">8dp</item>
    </style>

    <!-- Andere Buttons, die nur einmal verwendet werden, sind direkt in der layout xml über das drawable referenziert. Hier wäre ein extra Style unnötig -->

    <!-- Action Bar Style -->
    <style name="CustomActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:logo">@drawable/pizzabutler_logo_schriftzug_white</item>
    </style>

</resources>